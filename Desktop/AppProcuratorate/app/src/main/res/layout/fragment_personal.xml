<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tv_personal"
        android:background="@color/bg_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="个人中心"
            android:textSize="16sp"
            android:textColor="@color/bg_background"
            android:gravity="center"
            android:background="@color/bg_title"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/img_center_msg"
            android:padding="5dp"
            android:background="@color/bg_title"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/tv_personal"
        android:id="@+id/ll_user"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="用户昵称："/>
        <TextView
            android:id="@+id/tv_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="用户昵称"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_change_pwd"
        android:background="@color/white"
        android:layout_below="@id/tv_personal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/icon_change_pwd"
            android:layout_centerVertical="true"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/center_xiugaimima"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_toRightOf="@+id/icon_change_pwd"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:id="@+id/hang"
        android:background="@color/bg_title"
        android:layout_marginLeft="45dp"
        android:layout_below="@id/rl_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_below="@+id/hang"
        android:id="@+id/rl_about_us"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/icon_about_us"
            android:layout_centerVertical="true"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/center_about_us"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_toRightOf="@+id/icon_about_us"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn_exit"
        android:text="退出登录"
        android:textColor="@color/bg_background"
        android:background="@drawable/border_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
