<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:context="com.procuratorate.app.activity.DispatchWaitActivity">
    <Button
        android:id="@+id/btn_dispatch_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="确认"/>
    <ScrollView
        android:orientation="vertical"
        android:fillViewport="true"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_dispatch_sure"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/bg_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:background="@color/bg_background"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_car_department"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="部门："/>
                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="人数："/>
            </LinearLayout>
            <View
                android:background="@color/bg_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/bg_background"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_use_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="开始时间 : "/>
            </LinearLayout>
            <View
                android:background="@color/bg_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/bg_background"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_use_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="结束时间 :"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_detail"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 详情 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:background="@color/bg_background"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/tv_apply_person"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="申请人:"/>
                    <TextView
                        android:id="@+id/tv_mobil"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="电话:"/>
                </LinearLayout>
                <View
                    android:background="@color/bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:background="@color/bg_background"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_begin_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="出发地:"/>
                    <TextView
                        android:id="@+id/tv_end_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="目的地:"/>
                </LinearLayout>
                <View
                    android:background="@color/bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/bg_background"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="用车事由:"/>
                    <TextView
                        android:id="@+id/tv_the_car_for"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <View
                    android:background="@color/bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/bg_background"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="车辆要求:"/>
                    <TextView
                        android:id="@+id/tv_the_car_mark"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <View
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@color/bg_background"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="调度"
                        android:id="@+id/textView" />
                    <ImageButton
                        android:id="@+id/icon_add_dispatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add"
                        android:background="#00256485"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/btn_login_margin"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tv_car_dispatch_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true" />
                    <View
                        android:background="@color/bg_gray"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                </RelativeLayout>
                <FrameLayout
                    android:background="@color/bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.procuratorate.app.widget.ScrollListView
                        android:id="@+id/list_dispatch_result"
                        android:background="@color/bg_background"
                        android:paddingLeft="@dimen/margin_top"
                        android:divider="@color/bg_dispatch_detail"
                        android:dividerHeight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_empty_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/bg_background"
                        android:gravity="center"
                        android:text="暂无数据"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
